{
  "name": "@iris/sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for interacting with Iris wallet extension",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./wasm": {
      "types": "./dist/wasm.d.ts",
      "import": "./dist/wasm.js"
    }
  },
  "files": [
    "dist",
    "lib",
    "README.md"
  ],
  "scripts": {
    "copy-wasm": "mkdir -p lib/iris-wasm && cp -r ../extension/lib/iris-wasm/* lib/iris-wasm/",
    "build": "tsc && npm run copy-wasm",
    "build-example": "npm run build && tsc --project examples/tsconfig.json && npm run copy-wasm && vite build --config vite.config.examples.ts",
    "dev": "tsc --watch",
    "dev-example": "npm run copy-wasm && vite --config vite.config.examples.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "nockchain",
    "wallet",
    "web3",
    "blockchain",
    "schnorr"
  ],
  "author": "Nockbox Inc",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.5.3",
    "vite": "^5.0.0",
    "@types/node": "^20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fort-nock/fort-nock.git",
    "directory": "sdk"
  },
  "dependencies": {
    "@scure/base": "^2.0.0"
  }
}